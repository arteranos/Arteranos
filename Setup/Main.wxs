<?xml version='1.0' encoding='windows-1252'?>

<?define manufacturer = "willneedit" ?>
<?define product = "Arteranos" ?>

<Wix xmlns='http://schemas.microsoft.com/wix/2006/wi'>
  <Product Name='$(var.product)' Manufacturer='$(var.manufacturer)'
